<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>solutions.digamma</groupId>
    <artifactId>damas-project</artifactId>
    <packaging>pom</packaging>
    <version>${damas.verson}</version>

    <properties>
        <damas.verson>1.0.0.Alpha</damas.verson>
    </properties>

    <modules>
        <module>solutions.digamma.damas.api</module>
        <module>solutions.digamma.damas.jcr</module>
        <module>solutions.digamma.damas.utils</module>
        <module>solutions.digamma.damas.main</module>
        <module>solutions.digamma.damas.rs</module>
        <module>solutions.digamma.damas.rs.doc</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <!-- https://mvnrepository.com/artifact/javax.enterprise/cdi-api -->
            <dependency>
                <groupId>javax.enterprise</groupId>
                <artifactId>cdi-api</artifactId>
                <version>2.0-PFD</version>
            </dependency>
            <dependency>
                <groupId>solutions.digamma</groupId>
                <artifactId>damas.api</artifactId>
                <version>${damas.verson}</version>
            </dependency>
            <dependency>
                <groupId>solutions.digamma</groupId>
                <artifactId>damas.commons</artifactId>
                <version>${damas.verson}</version>
            </dependency>
            <dependency>
                <groupId>solutions.digamma</groupId>
                <artifactId>damas.utils</artifactId>
                <version>${damas.verson}</version>
            </dependency>
            <dependency>
                <groupId>solutions.digamma</groupId>
                <artifactId>damas.main</artifactId>
                <version>${damas.verson}</version>
            </dependency>
            <dependency>
                <groupId>solutions.digamma</groupId>
                <artifactId>damas.rs</artifactId>
                <version>${damas.verson}</version>
            </dependency>
            <dependency>
                <groupId>solutions.digamma</groupId>
                <artifactId>damas.jcr</artifactId>
                <version>${damas.verson}</version>
            </dependency>

            <!-- Test only dependencies -->
            <!-- https://mvnrepository.com/artifact/junit/junit -->
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>4.12</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.mockito</groupId>
                <artifactId>mockito-core</artifactId>
                <version>2.7.22</version>
                <scope>test</scope>
            </dependency>
            <!-- https://mvnrepository.com/artifact/org.jboss.arquillian.junit/arquillian-junit-container -->
            <dependency>
                <groupId>org.jboss.arquillian.junit</groupId>
                <artifactId>arquillian-junit-container</artifactId>
                <version>1.1.13.Final</version>
                <scope>test</scope>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.5.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <testSource>1.8</testSource>
                    <testTarget>1.8</testTarget>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.20</version>
            </plugin>
        </plugins>
    </build>

</project>